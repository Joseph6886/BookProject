@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron" style="background-image: url(../../Images/book2.jpg);">
   
    <h1 style="color:beige">Brytte Book Exchange</h1>
    <p class="lead" style="color:beige">Brytte Book Exchange is a free book exchange site where you can search, donate, or request a book from our inventory for free!</p>
    <p><a href="http://asp.net"></a></p>
</div>

<div class="row">
    <div class="col-md-12">
        <h2>Getting started</h2>
        <p>
           
        <p class="lead">Brytte Book Exchange is a free book exchange site where you can search, donate, or request a book from our inventory for free!</p>
        </p>
        <p><a class="btn btn-default" onclick="location.href= '@Url.Action("Request", "paperbacks")'">Request A Book &raquo;</a></p>
    </div>
    <div class="col-md-4">
        <h2>Donate A Book</h2>
        <p>Have a book you'd like to share?  Click on the donate button, and follow the instructions</p>
        <p><a class="btn btn-default" onclick="location.href= '@Url.Action("donate", "paperbacks")'">Donate A Book &raquo;</a></p>
    </div>
    <div class="col-md-4">
        <h2>Search For A Book</h2>
        <p>You can easily find the book that you are looking for by clicking the search button.</p>
        <p><a class="btn btn-default" onclick="location.href='@Url.Action("Index","paperbacks")'">Search For A Book &raquo;</a></p>
    </div>
</div>